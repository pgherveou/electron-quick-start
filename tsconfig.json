{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["esnext", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018"
  },
  "exclude": ["node_modules", "**/node_modules"]
}
