{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Electron: Main",
      "protocol": "inspector",
      "sourceMaps": true,
      "stopOnEntry": false,
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "runtimeArgs": ["./build/main.js", "--remote-debugging-port=9223"]
    },
    {
      "name": "Electron: Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "timeout": 30000
    }
  ],
  "compounds": [
    {
      "name": "Electron: All",
      "preLaunchTask": "build",
      "configurations": ["Electron: Main", "Electron: Renderer"]
    }
  ]
}
